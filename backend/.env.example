# HalalTrade Pro Backend - Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated, add your Vercel domain)
CORS_ORIGINS=https://your-app.vercel.app,https://halaltrade.vercel.app

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Google Gemini API (for AI analysis)
GEMINI_API_KEY=your_gemini_api_key_here

# Database (SQLite by default, path relative to backend/)
DATABASE_URL=sqlite:///./halaltrade.db
